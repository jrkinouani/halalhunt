<div class="row">
  <div class="col-md-offset-4 col-md-4 ">
    <h1>New job</h1>
    <%=  form_for(@halalpost, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.text_field :title , :placeholder => "Votre titre", class:"form-control"%>
    <%= f.text_area :description , :placeholder => "Votre annonce", class:"form-control"%>
    <%= f.text_field :url, :placeholder => "link to Job",  class:"form-control" %>
    <%= f.submit :value => "Validez votre annonce",  :class => "btn btn-lg btn-primary btn-block"%>
    <% end%>

    <%= link_to "back", root_path %>

  </div>
</div>
